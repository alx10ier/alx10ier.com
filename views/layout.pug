doctype html
html
    block vars
    head
        title= title + ' | Alx10ier'
        meta(name='viewport' content='width=device-width')
        block stylesheets
            link(rel='stylesheet' href='/stylesheets/style.css')
    body
        header.header
            nav.navbar.columns.mobile
                // todo 在 mobile size 的时候缩小菜单栏，显示brand
                .navbar-brand.col-2.col-3-tablet.hidden-for-mobile
                    i.bunny-icon
                    .info
                        .location= location
                        .action= title
                .navbar-menu.col-4.col-3-tablet.col-6-mobile.align-right.centered-for-mobile.columns.mobile
                    .navbar-item: a 堆土塔
                    .navbar-item: a 梅树底
                    .navbar-item: a 莯花钓
        block content
        block javascripts
            script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
